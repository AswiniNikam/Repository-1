package com.points;

import java.util.Collections;
import java.util.List;

class Coordinate{
	int x; int y;
	public Cordinate(int x, int y) {
		this.x=x;
		this.y=y;
	}
	public double getDistance(int x, int y) {
		double distance= (x*x)+(y*y);
	}
	public List<Coordinate> getClosestPoints(List<Coordinate> list){
		Collections.sort(list,(n1,n2)->{
			if(getDistance(n1.x, n1.y)!= getDistance(n2.x, n2.y)) {
				return getDistance(n1.x, n1.y)-getDistance(n2.x, n2.y);
			}
			return getDistance(n1.x, n1.y).compareTo(getDistance(n2.x, n2.y));
		});
		return list;
	}
}

